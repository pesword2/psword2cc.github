<body>
    <div class="container">
        <div class="header">
            <h1>ğŸ’³ Kart Bilgisi AyÄ±klayÄ±cÄ±</h1>
            <p>TXT dosyanÄ±zÄ± yÃ¼kleyin, kart bilgilerini otomatik ayÄ±klayÄ±n</p>
        </div>
        
        <div class="content">
            <div style="margin-bottom: 20px; padding: 20px; background: #f8f9ff; border-radius: 10px;">
                <h3 style="margin-bottom: 15px; color: #667eea;">âš™ï¸ Format AyarlarÄ±</h3>
                <div style="display: flex; gap: 20px; align-items: center;">
                    <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                        <input type="radio" name="format" value="pipe" checked>
                        <span>SeÃ§enek 1: <code style="background: white; padding: 2px 8px; border-radius: 4px;">4524804056288404|08|2020|2025</code></span>
                    </label>
                    <label style="display: flex; align-items: center; gap: 8px; cursor: pointer;">
                        <input type="radio" name="format" value="slash">
                        <span>SeÃ§enek 2: <code style="background: white; padding: 2px 8px; border-radius: 4px;">4524804056288404/08/2020/2025</code></span>
                    </label>
                </div>
            </div>
            
            <div class="upload-area" id="uploadArea">
                <div class="upload-icon">ğŸ“</div>
                <h3>Dosya SeÃ§in veya SÃ¼rÃ¼kleyip BÄ±rakÄ±n</h3>
                <p style="margin-top: 10px; color: #666;">TXT formatÄ±nda kart bilgileri iÃ§eren dosya</p>
                <input type="file" id="fileInput" accept=".txt">
                <button class="btn" onclick="document.getElementById('fileInput').click()">Dosya SeÃ§</button>
            </div>
            
            <div id="results" class="results hidden">
                <div class="stats">
                    <div class="stat-box">
                        <h3 id="cardCount">0</h3>
                        <p>Bulunan Kart</p>
                    </div>
                </div>
                
                <h3 style="margin-bottom: 15px;">ğŸ“‹ AyÄ±klanan Kartlar:</h3>
                <div class="output-area" id="outputArea"></div>
                
                <div class="action-buttons">
                    <button class="btn" onclick="downloadResults()">ğŸ’¾ TXT Ä°ndir</button>
                    <button class="btn" onclick="copyToClipboard()">ğŸ“‹ Panoya Kopyala</button>
                    <button class="btn" onclick="resetApp()">ğŸ”„ Yeni Dosya</button>
                </div>
                
                <div id="alertBox"></div>
            </div>
        </div>
    </div>

    <script>
        let extractedCards = [];
        
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const resultsDiv = document.getElementById('results');
        const outputArea = document.getElementById('outputArea');
        const cardCount = document.getElementById('cardCount');
        const alertBox = document.getElementById('alertBox');
        
        // Drag & Drop
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('dragover');
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('dragover');
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
            const file = e.dataTransfer.files[0];
            if (file && file.name.endsWith('.txt')) {
                processFile(file);
            } else {
                showAlert('LÃ¼tfen sadece .txt dosyasÄ± yÃ¼kleyin!', 'error');
            }
        });
        
        fileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) {
                processFile(file);
            }
        });
        
        function processFile(file) {
            const reader = new FileReader();
            reader.onload = (e) => {
                const content = e.target.result;
                extractCards(content);
            };
            reader.readAsText(file);
        }
        
        function extractCards(content) {
            extractedCards = [];
            
            // SeÃ§ili formatÄ± al
            const formatType = document.querySelector('input[name="format"]:checked').value;
            const separator = formatType === 'pipe' ? '|' : '/';
            
            // Regex patterns
            const cardPattern = /\b[\d\s\-]{14,19}\b/g;
            const datePattern = /\b(0[1-9]|1[0-2])[\s\-\/]?(\d{2}|\d{4})\b/g;
            const cvvPattern = /\b\d{3,4}\b/g;
            
            // EÅŸleÅŸmeleri bul
            const cards = content.match(cardPattern) || [];
            const dates = content.match(datePattern) || [];
            const cvvs = content.match(cvvPattern) || [];
            
            // Her kart iÃ§in iÅŸle
            for (let i = 0; i < cards.length; i++) {
                // Kart numarasÄ±nÄ± temizle
                const cleanCard = cards[i].replace(/[^0-9]/g, '');
                
                // 14-16 hane kontrolÃ¼
                if (cleanCard.length < 14 || cleanCard.length > 16) continue;
                
                // Tarih kontrolÃ¼
                if (i >= dates.length) continue;
                const dateMatch = dates[i].match(/(0[1-9]|1[0-2])[\s\-\/]?(\d{2}|\d{4})/);
                if (!dateMatch) continue;
                
                let month = dateMatch[1];
                let year = dateMatch[2];
                
                // YÄ±l 2 haneliyse 4 haneye Ã§evir
                if (year.length === 2) {
                    year = '20' + year;
                }
                
                // CVV kontrolÃ¼
                if (i >= cvvs.length) continue;
                const cvv = cvvs[i];
                
                // Format: KARTNO|AY|YIL|CVV veya KARTNO/AY/YIL/CVV
                const formatted = `${cleanCard}${separator}${month}${separator}${year}${separator}${cvv}`;
                extractedCards.push(formatted);
            }
            
            displayResults();
        }
        
        function displayResults() {
            if (extractedCards.length === 0) {
                showAlert('HiÃ§ kart bilgisi bulunamadÄ±!', 'error');
                return;
            }
            
            // SonuÃ§larÄ± gÃ¶ster
            resultsDiv.classList.remove('hidden');
            cardCount.textContent = extractedCards.length;
            
            outputArea.innerHTML = '';
            extractedCards.forEach((card) => {
                const div = document.createElement('div');
                div.className = 'output-line';
                div.textContent = card;
                outputArea.appendChild(div);
            });
            
            showAlert(`âœ“ ${extractedCards.length} adet kart baÅŸarÄ±yla ayÄ±klandÄ±!`, 'success');
        }
        
        function downloadResults() {
            if (extractedCards.length === 0) {
                showAlert('Ä°ndirilecek veri yok!', 'error');
                return;
            }
            
            try {
                const text = extractedCards.join('\n');
                const blob = new Blob([text], { type: 'text/plain;charset=utf-8' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'ayiklanan_kartlar.txt';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
                showAlert('âœ“ Dosya baÅŸarÄ±yla indirildi!', 'success');
            } catch (error) {
                showAlert('Ä°ndirme hatasÄ±: ' + error.message, 'error');
            }
        }
        
        function copyToClipboard() {
            const text = extractedCards.join('\n');
            navigator.clipboard.writeText(text).then(() => {
                showAlert('Panoya kopyalandÄ±!', 'success');
            }).catch(() => {
                showAlert('Kopyalama baÅŸarÄ±sÄ±z!', 'error');
            });
        }
        
        function resetApp() {
            extractedCards = [];
            resultsDiv.classList.add('hidden');
            fileInput.value = '';
            alertBox.innerHTML = '';
        }
        
        function showAlert(message, type) {
            alertBox.innerHTML = `<div class="alert alert-${type}">${message}</div>`;
            setTimeout(() => {
                alertBox.innerHTML = '';
            }, 5000);
        }
    </script>
</body>
</html>
